        "value": "Run "
      },
      {
        "id": "compressionForList-8",
        "type": "code",
        "value": "INFO COMMANDSTATS"
      },
      {
        "id": "compressionForList-9",
        "type": "span",
        "value": " before and after making this change to verify the latency numbers."
      },
      {
        "id": "compressionForList-10",
        "type": "spacer",
        "value": "l"
      },
      {
        "id": "compressionForList-11",
        "type": "span",
        "value": "See the "
      },
      {
        "id": "compressionForList-12",
        "type": "link",
        "value": {
          "href": "https://redis.io/docs/management/optimization/memory-optimization/?utm_source=redisinsight&utm_medium=recommendation&utm_campaign=compressionForList/",
          "name": "documentation"
        }
